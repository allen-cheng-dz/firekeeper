{
  "name": "firekeeper",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "commit": "git cz",
    "release": "standard-version"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "commitizen": "^4.2.4",
    "commitlint-config-cz": "^0.13.2",
    "cz-customizable": "^6.3.0",
    "husky": "^7.0.1",
    "lerna": "^4.0.0",
    "standard-version": "^9.3.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-customizable"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "packages": [
    "packages/*"
  ]
}
